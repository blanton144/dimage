# Run make -f make.skysub all
#
# $Id$
#
NAME = skysub

BIB = $(shell echo $(BIBINPUTS) | tr -s '/:' '/\n' | grep ccpp-latex)

all: $(NAME).pdf 

%.pdf : %.dvi
	dvips -Ppdf -N0 -o $*.ps $*.dvi
	ps2pdf $*.ps
	rm $*.ps

%.dvi: %_figures.tex %.tex $(BIB)ccpp.bib
	latex $*; bibtex $*; latex $*; latex $*

fullclean:
	rm *.pdf *.log *.dvi *.aux *.bbl *.blg

test:
	@echo "This should be the correct path to the ccpp.bib file:"
	@echo $(BIB)ccpp.bib

dummy:
