NAME = skysub

BIB = $(shell echo $(BIBINPUTS) | tr -s '/:' '/\n' | grep ccpp_latex)

%.dvi: %.tex %_figures.tex $(BIB)ccpp.bib
	latex $*; bibtex $*; latex $*; latex $*

%.pdf: %.dvi
	dvips -Ppdf -N0 -o $*.ps $*.dvi
	ps2pdf $*.ps
	rm $*.ps

all: $(NAME).pdf

fullclean:
	rm -f *.pdf *.log *.dvi *.aux *.bbl *.blg

test:
	@echo "This should be the correct path to the ccpp.bib file:"
	@echo $(BIB)ccpp.bib

dummy:
