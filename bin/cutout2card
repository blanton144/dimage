#!/usr/bin/env python

from __future__ import division

import pdb
import os
import sys
import getopt
import subprocess

def main(argv):
    # Set defaults
    xminsize= int(816)
    yminsize= int(1110)

    # Parse header
    helpstr='cutout2card -h -i <input> -o <output>'
    try:
        opts, args = getopt.getopt(argv,"hi:o:",["help=","input=","output="])
    except getopt.GetoptError:
        print helpstr
        sys.exit(2)
    for opt, arg in opts:
        if opt == ("-h", "--help"):
            print helpstr;
            sys.exit()
        elif opt in ("-i", "--input"):
            infile = arg
        elif opt in ("-o", "--output"):
            outfile = arg
            
    infile_identity= subprocess.check_output(["identify", infile])

    subprocess.call(["convert", "-resize", str(yminsize)+"x"+str(yminsize),
                     infile, "tmp.png"])
    subprocess.call(["convert", "-crop", "816x1110+147+0", "tmp.png", 
                     outfile])

if __name__ == "__main__": 
    try:
        main(sys.argv[1:])
    except:
        import sys
        tb = sys.exc_info()[2]
        pdb.post_mortem(tb)
