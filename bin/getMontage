#!/usr/local/bin/perl

#
# Request a Montage image and then wait for it and then download.
#
# MRB 2009-03-04 
#

if(@ARGV < 5) {
	print "Usage: getMontage <filename> <filter> <ra> <dec> <size>";
	exit();
}

$filename= $ARGV[0];
$filter= $ARGV[1];
$ra= $ARGV[2];
$dec= $ARGV[3];
$size= $ARGV[4];

$reqid=`requestMontage $filter $ra $dec $size`;
chop $reqid;

print "Got request id = $reqid\n";

system("retrieveMontage $reqid $filename");
