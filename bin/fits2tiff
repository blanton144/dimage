#!/usr/bin/env python

import pdb
import sys
from PIL import Image
import os
import numpy as np
import esutil.io as io
import getopt

def main(argv):
    # Set defaults
    bpar=0.03
    scale=60.
    
    # Parse header			
    helpstr='fits2tiff -i <input> -o <output> -b <b param> -s <scale>'
    try:
        opts, args = getopt.getopt(argv,"hi:o:b:s:",["help=","input=","output=","start=","end=","b=","scale="])
    except getopt.GetoptError:
        print helpstr
        sys.exit(2)

    for opt, arg in opts:
        if opt == ("-h", "--help"):
            print helpstr;
            sys.exit()
        elif opt in ("-i", "--input"):
            infile = arg
        elif opt in ("-o", "--output"):
            outfile = arg
        elif opt in ("-b", "--b"):
            bpar = np.float32(arg)
        elif opt in ("-s", "--scale"):
            scale = np.float32(arg)
            
    # Read in image
    image= io.read_fits(infile)
    ndimage= np.arcsinh(image/bpar)*scale
    ndimage[np.where(ndimage > 255.) ]=255.
    ndimage[np.where(ndimage < 0.) ]=0.
    ndimage= np.int8(255-ndimage)
    image= Image.fromarray(ndimage, mode='L')
    image.save(outfile, dpi=(1200,1200), format='png')
		
if __name__ == "__main__": 
    try:
        main(sys.argv[1:])
    except:
        import sys
        tb = sys.exc_info()[2]
        pdb.post_mortem(tb)
